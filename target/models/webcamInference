import cv2
from ultralytics import YOLO

# Load the YOLOv8 model (make sure 'ultra_final_final.pt' exists)
model = YOLO(r'D:\git\cv-project-log\target\models\ultra_final_final.pt')

# Set confidence threshold
confidence_threshold = 0.8

# Initialize webcam
cap = cv2.VideoCapture(1)

if not cap.isOpened():
    print("Error: Could not access webcam.")
    exit()

while True:
    ret, frame = cap.read()
    
    if not ret:
        print("Error: Failed to capture image.")
        break

    # Perform inference
    results = model.predict(source=frame, conf=confidence_threshold, verbose=False)

    # Extract the result from the list
    result = results[0]

    # Plot the results (bounding boxes, labels, confidence)
    annotated_frame = result.plot()

    # Show the annotated frame
    cv2.imshow("YOLOv8 Detection", annotated_frame)

    # Exit on pressing 'q'
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Release resources
cap.release()
cv2.destroyAllWindows()